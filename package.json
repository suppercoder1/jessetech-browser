{
  "name": "jessetech-browser",
  "version": "0.1.0",
  "description": "Branded Electron shell for SearxNG",
  "main": "app/main.js",
  "author": "JesseTech",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac"
  },
  "devDependencies": {
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "nl.jessetech.browser",
    "productName": "JesseTech Browser",
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "app/assets/icon.png",
      "target": [
        "dmg",
        "zip"
      ]
    }
  }
}
